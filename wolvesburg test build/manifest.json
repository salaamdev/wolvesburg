{
    "manifest_version": 3,
    "name": "WolvesBurg (BETA TEST VERSIONS)",
    "version": "1.2.0.107",
    "description": "Automate Wolvesville",
    "author": "A.Hassan aka redscorpion.",
    "action": {
        "default_title": "WolvesBurg",
        "default_popup": "popup/popup.html",
        "default_icon": {
            "32": "images/icons/32.png"
        }
    },
    "icons": {
        "16": "./images/icons/16.png",
        "48": "./images/icons/48.png",
        "128": "./images/icons/128.png",
        "256": "./images/icons/256.png",
        "512": "./images/icons/512.png",
        "1024": "./images/icons/1024.png"
    },
    "content_scripts": [
        {
            "js": [
                "./contentscripts/notifications/notification.js",
                "./contentscripts/onAdPage/roulette.js",
                "./contentscripts/detective/messages.js"
            ],
            "css": [
                "./contentscripts/notifications/notification.css"
            ],
            "matches": [
                "*://www.wolvesville.com/*"
            ],
            "all_frames": true
        },
        {
            "js": [
                "./contentscripts/notifications/notification.js",
                "./contentscripts/onAdPage/adBoxFrame.js"
            ],
            "css": [
                "./contentscripts/notifications/notification.css"
            ],
            "matches": [
                "*://googleads.g.doubleclick.net/*",
                "*://pagead.googlesyndication.com/*",
                "*://pagead2.googlesyndication.com/*"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "options_page": "./option/option.html",
    "options_ui": {
        "page": "./option/option.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "notifications"
    ],
    "host_permissions": [
        "*://wolvesville.com/*",
        "*://www.wolvesville.com/*",
        "*://googleads.g.doubleclick.net/*",
        "*://pagead.googlesyndication.com/*",
        "*://pagead2.googlesyndication.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "contentscripts/notifications/notification.css",
                "contentscripts/notifications/notification.js"
            ],
            "matches": [
                "*://wolvesville.com/*",
                "*://www.wolvesville.com/*",
                "*://googleads.g.doubleclick.net/*",
                "*://pagead.googlesyndication.com/*",
                "*://pagead2.googlesyndication.com/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}